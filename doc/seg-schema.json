{
  "@context": "http://qiicr.org/dcmqi/contexts/dcmqi.jsonld",
  "id": "http://qiicr.org/schema/dcmqi/seg-schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "seriesAttributes": {
      "type": "object",
      "properties": {
        "ContentCreatorName": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/PN"
            }
          ],
          "default": "Reader1"
        },
        "ClinicalTrialSeriesID": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/LO"
            }
          ],
          "default": "Session1"
        },
        "ContentLabel": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/CS"
            }
          ],
          "default": "SEGMENTATION"
        },
        "ContentDescription": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/LO"
            }
          ],
          "default": "Image segmentation"
        },
        "ClinicalTrialCoordinatingCenterName": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/LO"
            }
          ],
          "default": "dcmqi"
        },
        "ClinicalTrialTimePointID": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/LO"
            }
          ],
          "default": "1"
        },
        "SeriesDescription": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/LO"
            }
          ],
          "default": "Segmentation"
        },
        "SeriesNumber": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/IS"
            }
          ],
          "default": "300"
        },
        "InstanceNumber": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/IS"
            }
          ],
          "default": "1"
        },
        "BodyPartExamined": {
          "allOf": [
            {
              "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/CS"
            }
          ],
          "default": ""
        }
      }
    },
    "segmentAttributes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "SegmentedPropertyCategoryCodeSequence",
          "SegmentedPropertyTypeCodeSequence",
          "SegmentAlgorithmType"
        ],
        "properties": {
          "LabelID": {
            "type": "number",
            "default": 1
          },
          "SegmentDescription": {
            "type": "string"
          },
          "SegmentedPropertyCategoryCodeSequence": {
            "allOf": [
              {
                "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/codeSequence"
              },
              {
                "properties": {
                  "CodeValue": {
                    "default": "T-D0050"
                  },
                  "CodingSchemeDesignator": {
                    "default": "SRT"
                  },
                  "CodeMeaning": {
                    "default": "Tissue"
                  }
                }
              }
            ]
          },
          "SegmentedPropertyTypeCodeSequence": {
            "allOf": [
              {
                "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/codeSequence"
              },
              {
                "properties": {
                  "CodeValue": {
                    "default": "T-D0050"
                  },
                  "CodingSchemeDesignator": {
                    "default": "SRT"
                  },
                  "CodeMeaning": {
                    "default": "Tissue"
                  }
                }
              }
            ]
          },
          "SegmentedPropertyTypeModifierCodeSequence": {
            "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/codeSequence"
          },
          "AnatomicRegionSequence": {
            "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/codeSequence"
          },
          "AnatomicRegionModifierSequence": {
            "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/codeSequence"
          },
          "SegmentAlgorithmType": {
            "allOf": [
              {
                "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/CS"
              },
              {
                "enum": [
                  "AUTOMATIC",
                  "MANUAL",
                  "SEMIAUTOMATIC"
                ]
              },
              {
                "default": "SEMIAUTOMATIC"
              }
            ]
          },
          "SegmentAlgorithmName": {
            "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/LO"
          },
          "recommendedDisplayRGBValue": {
            "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/RGB",
            "default": [
              128,
              174,
              128
            ]
          },
          "RecommendedDisplayCIELabValue": {
            "$ref": "http://qiicr.org/schema/dcmqi/common-schema.json#/definitions/CIELab",
            "default": [
              "43803",
              "26565",
              "37722"
            ]
          }
        }
      }
    }
  }
}